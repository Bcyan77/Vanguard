{% extends 'base.html' %}

{% block title %}Parties - Vanguard{% endblock %}

{% block extra_css %}
<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .filters {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .party-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .party-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s;
        cursor: pointer;
    }

    .party-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        border-color: rgba(102, 126, 234, 0.5);
    }

    .party-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
    }

    .party-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .party-status {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-open {
        background: rgba(76, 175, 80, 0.2);
        color: #4caf50;
        border: 1px solid #4caf50;
    }

    .status-full {
        background: rgba(255, 152, 0, 0.2);
        color: #ff9800;
        border: 1px solid #ff9800;
    }

    .status-closed {
        background: rgba(244, 67, 54, 0.2);
        color: #f44336;
        border: 1px solid #f44336;
    }

    .party-activity {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
        border-radius: 6px;
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }

    .party-description {
        color: #b0b0b0;
        margin-bottom: 1rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .party-meta {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        color: #888;
    }

    .party-meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .party-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .tag {
        padding: 0.25rem 0.75rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        font-size: 0.75rem;
        color: #b0b0b0;
    }

    .party-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .creator-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #888;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #888;
    }

    .empty-state h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #b0b0b0;
    }

    .search-box {
        position: relative;
    }

    .search-box input {
        padding-left: 2.5rem;
    }

    .search-icon {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }
</style>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>üéÆ Find Your Fireteam</h1>
    {% if user.is_authenticated %}
        <a href="{% url 'parties:party_create' %}" class="btn">+ Create Party</a>
    {% endif %}
</div>

<div class="filters">
    <form method="get" action="{% url 'parties:party_list' %}">
        <div class="filter-row">
            <div class="search-box">
                <span class="search-icon">üîç</span>
                <input type="text" name="search" placeholder="Search parties..." value="{{ search_query|default:'' }}">
            </div>
            
            <select name="activity_type">
                <option value="">All Activities</option>
                {% for value, label in activity_types %}
                    <option value="{{ value }}" {% if selected_activity == value %}selected{% endif %}>{{ label }}</option>
                {% endfor %}
            </select>
            
            <select name="status">
                <option value="">All Status</option>
                <option value="open" {% if selected_status == 'open' %}selected{% endif %}>Open</option>
                <option value="full" {% if selected_status == 'full' %}selected{% endif %}>Full</option>
                <option value="closed" {% if selected_status == 'closed' %}selected{% endif %}>Closed</option>
            </select>
            
            <button type="submit" class="btn">Apply Filters</button>
        </div>
    </form>
</div>

{% if parties %}
    <div class="party-grid">
        {% for party in parties %}
            <div class="party-card" onclick="window.location.href='{% url 'parties:party_detail' party.pk %}'">
                <div class="party-header">
                    <div>
                        <div class="party-activity">{{ party.get_activity_type_display }}</div>
                        <h3 class="party-title">{{ party.title }}</h3>
                    </div>
                    <span class="party-status status-{{ party.status }}">
                        {% if party.status == 'open' %}üü¢ Open
                        {% elif party.status == 'full' %}üü° Full
                        {% else %}üî¥ Closed{% endif %}
                    </span>
                </div>
                
                <p class="party-description">{{ party.description }}</p>
                
                <div class="party-meta">
                    <div class="party-meta-item">
                        <span>üë•</span>
                        <span>{{ party.current_members }}/{{ party.max_members }}</span>
                    </div>
                    {% if party.requires_mic %}
                        <div class="party-meta-item">
                            <span>üé§</span>
                            <span>Mic Required</span>
                        </div>
                    {% endif %}
                    {% if party.min_power_level %}
                        <div class="party-meta-item">
                            <span>‚ö°</span>
                            <span>{{ party.min_power_level }}+ Power</span>
                        </div>
                    {% endif %}
                </div>
                
                {% if party.tags.all %}
                    <div class="party-tags">
                        {% for tag in party.tags.all %}
                            <span class="tag">#{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="party-footer">
                    <div class="creator-info">
                        <span>Created by</span>
                        <strong>{{ party.creator.display_name }}</strong>
                    </div>
                    {% if party.scheduled_time %}
                        <div class="party-meta-item">
                            <span>üïê</span>
                            <span>{{ party.scheduled_time|date:"M d, H:i" }}</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="empty-state">
        <h2>No Parties Found</h2>
        <p>Be the first to create a party!</p>
        {% if user.is_authenticated %}
            <a href="{% url 'parties:party_create' %}" class="btn" style="margin-top: 1rem;">Create Your First Party</a>
        {% else %}
            <a href="{% url 'accounts:login' %}" class="btn" style="margin-top: 1rem;">Login to Create a Party</a>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
